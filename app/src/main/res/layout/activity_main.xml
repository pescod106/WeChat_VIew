<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyman="http://schemas.android.com/apk/res/com.pescod.wechat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:background="@drawable/tab_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <com.pescod.wechat.ChangeColorIconWithText
            android:id="@+id/id_indicator_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="5dp"
            hyman:wechat_color="#ff45c01a"
            hyman:wechat_text="@string/tab_chat"
            hyman:wechat_text_size="12sp"
            hyman:wechat_icon="@mipmap/ic_menu_start_conversation"/>
        <com.pescod.wechat.ChangeColorIconWithText
            android:id="@+id/id_indicator_two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="5dp"
            hyman:wechat_color="#ff45c01a"
            hyman:wechat_text="@string/tab_contacts"
            hyman:wechat_text_size="12sp"
            hyman:wechat_icon="@mipmap/ic_menu_friendslist"/>
        <com.pescod.wechat.ChangeColorIconWithText
            android:id="@+id/id_indicator_three"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="5dp"
            hyman:wechat_color="#ff45c01a"
            hyman:wechat_text="@string/tab_discover"
            hyman:wechat_text_size="12sp"
            hyman:wechat_icon="@mipmap/ic_menu_emoticons"/>
        <com.pescod.wechat.ChangeColorIconWithText
            android:id="@+id/id_indicator_four"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="5dp"
            hyman:wechat_color="#ff45c01a"
            hyman:wechat_text="@string/tab_me"
            hyman:wechat_text_size="12sp"
            hyman:wechat_icon="@mipmap/ic_menu_allfriends"/>
    </LinearLayout>
</LinearLayout>
